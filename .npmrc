# Performance optimizations
prefer-offline=true          # Use cache first, network second
fetch-retries=2              # Don't retry failed downloads 5 times (default)
fetch-retry-mintimeout=10000 # Faster timeout
fetch-retry-maxtimeout=60000

# Reduce noise during development
audit=false                  # Skip security audits on install (run separately)
fund=false                   # Skip funding messages
loglevel=error               # Only show errors, not warnings

# Stricter installs (optional - uncomment if you want)
# engine-strict=true         # Enforce Node version from package.json
# save-exact=true            # Save exact versions (no ^ or ~)

# Cache settings
cache-min=3600               # Keep cache for 1 hour minimum
