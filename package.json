{
  "name": "toodoo",
  "private": true,
  "version": "0.1.0",
  "description": "Always-on-top todo overlay with global hotkey quick-add popups.",
  "author": "TooDoo",
  "type": "module",
  "main": "dist-electron/main.mjs",
  "scripts": {
    "dev": "vite dev",
    "build": "tsc -b && vite build",
    "electron:build": "tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:playwright",
    "install:clean": "npm ci",
    "audit:security": "npm audit --audit-level=moderate",
    "cache:clean": "npm cache clean --force",
    "deps:check": "npm outdated",
    "deps:update": "npm update"
  },
  "build": {
    "appId": "com.toodoo.app",
    "productName": "TooDoo",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "maximum",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json",
      "!dist/**/*.map"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-grab": "^0.0.98",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.0"
  }
}
